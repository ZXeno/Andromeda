<Window x:Class="Andromeda.AboutWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Andromeda - About" Height="400" Width="480" ResizeMode="NoResize">
    <Grid>
        <Image HorizontalAlignment="Left" Height="375" VerticalAlignment="Top" Width="480" Source=".\Resources\sagan_tyson.png" Margin="0,0,0,0" />
        <TextBox x:Name="ABOUT_LABEL" Foreground="#FFE0E0E0" Margin="10,0,10,32" VerticalAlignment="Bottom" Height="162" Background="#B2303030" IsReadOnly="True" />
        <Button x:Name="Andromeda_Button" Content="Learn about Andromeda" HorizontalAlignment="Left" Margin="10,0,0,10" Width="164" Click="Andromeda_Button_Click" Height="16" VerticalAlignment="Bottom"/>
        <Button x:Name="STEM_Button" Content="Donate to STEM Education" Margin="179,0,0,10" Height="16" VerticalAlignment="Bottom" Click="STEM_Button_Click" HorizontalAlignment="Left" Width="188"/>
        <Button x:Name="Cosmos_Button" Content="Get Cosmos" Margin="0,0,10,10" Height="16" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="80" Click="Cosmos_Button_Click"/>

    </Grid>
</Window>
