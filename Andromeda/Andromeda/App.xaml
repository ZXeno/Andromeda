<Application x:Class="Andromeda.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Andromeda"
             >
    <Application.Resources>

        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#CC404040"/>
            <Setter Property="BorderBrush" Value="#FF004064"/>
            <Setter Property="Foreground" Value="#FFE0E0E0" />
            <Setter Property="FontFamily" Value="Lucida Console" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderThickness="2" CornerRadius="0" BorderBrush="#FF004064">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#CC606060" />
                </Trigger>
            </Style.Triggers>

        </Style>

    </Application.Resources>
</Application>
