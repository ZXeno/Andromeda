<Window x:Class="Andromeda.CLI_Prompt" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Andromeda.ViewModel"
        Title="Prompt" Height="100" Width="600" ResizeMode="CanMinimize" ShowInTaskbar="False" Background="#FF1C1C1C" Foreground="#FFE0E0E0">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:CliViewModel}" ></DataTemplate>
    </Window.Resources>

    <Grid>
        <Image Height="100" Source="..\Assets/cli_bg.png" Margin="0,0,0,0" Opacity=".75" />

        <StackPanel FocusManager.FocusedElement="{Binding ElementName=CommandBox}" >
            <TextBox x:Name="CommandBox" Margin="10,10,10,0" TextWrapping="NoWrap" Text="{Binding TextBoxContents}" Height="22" VerticalAlignment="Top" BorderBrush="#FF004064" />
        </StackPanel>

        <Button x:Name="Okay_Button" Content="Okay" HorizontalAlignment="Right" Margin="0,0,90,10" Width="75" Command="{Binding OkayCommand}" Height="16" VerticalAlignment="Bottom"/>
        <Button x:Name="Cancel_Button" Content="Cancel" Margin="0,0,10,10" Command="{Binding CancelCommand}" Height="16" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="77"/>
    </Grid>
</Window>
