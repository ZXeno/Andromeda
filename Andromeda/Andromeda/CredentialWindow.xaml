<Window x:Class="Andromeda.CredentialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CredentialWindow" Height="160" Width="300" Background="#FF252526">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="20" Margin="83,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
        <PasswordBox HorizontalAlignment="Left" Margin="83,58,0,0" VerticalAlignment="Top" Width="120" Height="20"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top" Height="24" Width="68" Foreground="#FFF1F1F1" />
        <Label Content="Password:" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top" Width="68" Foreground="#FFF1F1F1" />
        <Button Content="Okay" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Margin="0,0,170,10" Height="18" />
        <Button Content="Close" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Height="18" />

        <Button Content="Check" HorizontalAlignment="Right" Margin="0,0,90,10" VerticalAlignment="Bottom" Width="75" Height="18"/>

    </Grid>
</Window>
