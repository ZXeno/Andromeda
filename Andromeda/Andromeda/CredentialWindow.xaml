<Window x:Class="Andromeda.CredentialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CredentialWindow" Height="160" Width="300" Background="#FF252526">
    <Grid>
        <TextBox HorizontalAlignment="Right" Height="20" Margin="0,39,89,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
        <Label Content="Username:" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Height="24" Width="68" Foreground="#FFF1F1F1" />
        <Label Content="Password:" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Width="68" Foreground="#FFF1F1F1" />
        <Button Content="Okay" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Margin="0,0,95,10" />
        <Button Content="Close" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" />
        <PasswordBox HorizontalAlignment="Left" Margin="83,68,0,0" VerticalAlignment="Top" Width="120" Height="20"/>

    </Grid>
</Window>
