<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Andromeda"
        xmlns:vm="clr-namespace:Andromeda.ViewModel"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:enum="clr-namespace:Andromeda.Command"
        x:Class="Andromeda.MainWindow"
        Height="750" Width="800">

    <Window.Resources>
        <ResourceDictionary Source="ResourceDictionary.xaml" />
    </Window.Resources>

    <Grid>
        <Image HorizontalAlignment="Left" Height="750" VerticalAlignment="Top" Width="800" Source="Assets/andromeda.jpg" Stretch="UniformToFill"/>

        <Label Content="{Binding Domain}" HorizontalContentAlignment="Right" Foreground="#FFE0E0E0" HorizontalAlignment="Right" Margin="0,11,187,0" VerticalAlignment="Top" Width="98" FontSize="12" Height="20" FontFamily="Lucida Console"/>
        <Label Content="Password:" Foreground="#FFE0E0E0" HorizontalAlignment="Right" Margin="0,35,187,0" VerticalAlignment="Top" Width="74" FontSize="12" Height="20" FontFamily="Lucida Console"/>
        <TextBox Style="{StaticResource White}" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Right" Height="20" Margin="0,10,16,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="166"/>
        <PasswordBox Style="{StaticResource PwdWhite}" x:Name="PasswordBox" vm:PasswordBoxAssistant.BindPassword="true" vm:PasswordBoxAssistant.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Right"  Margin="0,35,16,0" Width="166" Height="20" VerticalAlignment="Top" Password="" SelectionOpacity="-1"/>

        <TextBox x:Name="DEVICE_LIST_TEXTBOX" Text="{Binding DeviceListString}" Margin="16,100,0,0" HorizontalAlignment="Left" Width="116" Background="#A5474747" Foreground="#FFE0E0E0" Height="419" VerticalAlignment="Top" AcceptsReturn="True" ToolTip="Enter device ids here." />

        <ListView x:Name="AVAIL_ACTS_LISTBOX" HorizontalAlignment="Right" Margin="0,100,16,239" Width="622" Background="#A5474747" ItemsSource="{Binding ActionsList}" SelectedItem="{Binding SelectedAction}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="      "/>
                        <TextBlock Text="{Binding ActionName}"  FontWeight="Bold" Foreground="#FFE0E0E0" ToolTip="{Binding Description}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>

        <Label Content="Available Actions:" Foreground="#FFE0E0E0" HorizontalAlignment="Left" Margin="156,77,0,0" VerticalAlignment="Top" Width="200" FontSize="16" Height="28" FontFamily="Lucida Console"/>
        <Label Content="Computers:" HorizontalAlignment="Left" Margin="16,80,0,0" VerticalAlignment="Top" Width="100" FontFamily="Lucida Console" Height="23" Foreground="#FFE0E0E0"/>

        <Label Content="{Binding Path=SelectedAction.Description}" Foreground="#FFE0E0E0" Background="#A5474747" Margin="0,0,86,202" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="552" Height="26"/>
        <Button Content="Run" HorizontalAlignment="Right" Margin="0,0,16,205" Width="65" Height="20" VerticalAlignment="Bottom" Command="{Binding RunCommand, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox Style="{StaticResource ResultConsole}" Text="{Binding Instance.ConsoleString, UpdateSourceTrigger=PropertyChanged}" Margin="16,0,16,35" TextWrapping="Wrap" Height="150" VerticalAlignment="Bottom" >
            <TextBox.DataContext>
                <vm:ResultConsole/>
            </TextBox.DataContext>
        </TextBox>


    </Grid>

</Window>